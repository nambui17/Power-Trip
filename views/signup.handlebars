<head>
  <link rel='stylesheet' href='/css/signup.css'/>
</head>
<div class='container justify-content-center'>
  <div class='card align-items-center w-75 mt-5 background'>
    
    <form class='signup-form col-6 justify-content-center'>
      <div class='form-group mt-4 mb-4'>

        <input type='text' placeholder="Create a username" class='form-control' id='username-signup' />
      </div>
      <div class='form-group mb-4'>

        <input type='password' placeholder="Create a password" class='form-control'
          id='password-signup' />
      </div>
      <div class='form-group mb-4'>

        <input type='password' placeholder="Re-enter password" class='form-control' id='passRe-signup' />
        <small hidden id='passwordHelpBlock' class='form-text text-muted'>
          Your passwords must match!
        </small>
      </div>
      <button type='submit' class='btn btn-primary mb-4'>Submit</button>
    </form>
  </div>
</div>

<script src='/js/signup.js'></script>