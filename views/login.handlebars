<head>
    <link rel='stylesheet' href='/css/login.css'/>
</head>
<div class="container justify-content-center">
    <div class='card align-items-center w-75 mt-5'>
        
        <form class='login-form col-6 justify-content-center' id="login">
            <div class='form-group mt-4 mb-5'>

                <input type='text' placeholder="Enter username" class='form-control' id='username-login' />
            </div>
            <div class='form-group mb-5'>

                <input type='password' placeholder="Enter password" class='form-control' id='password-login' />
            </div>
            <button type='submit' class='btn btn-primary mb-3'>Login</button>
        </form>
    </div>
</div>

<script src='/js/login.js'></script>